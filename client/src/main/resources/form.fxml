<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="Controller">
    <HBox>
        <TextField promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField promptText="Пароль" HBox.hgrow="ALWAYS" />
        <Button text="Аутентификация" HBox.hgrow="ALWAYS" />
    </HBox>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="msgField" onAction="#sendMsg" promptText="Введите сообщение" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMsg" text="Отправить" />
    </HBox>
   <TableView prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn  text="File" />
       <TableColumn  text="Size" />
     </columns>
   </TableView>
</VBox>
